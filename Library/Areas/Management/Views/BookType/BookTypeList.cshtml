@using Microsoft.AspNetCore.Mvc.Rendering
@using Library.Dto
@using Library.Models
@model List<BookType>    
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!--buradaki BookType ı BookTypeDto yapmıştım şimdi değiştirdim.-->

<h3 class="text-center">Kitap Tipi Listeleme Sayfası</h3>
<a asp-controller="BookType" asp-action="Create" asp-area="Management" class="btn btn-primary" style="float:right">Yeni ekle</a>
<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Aksiyonlar</th>
		</tr>			
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<th>@(i+1)</th>
				<th>@Model[i].Name</th>
				<td>
					<a class="big-icon" asp-controller="BookType" asp-action="Edit" asp-area="Management" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
					<a class="big-icon margin icon" asp-controller="BookType" asp-action="HardDelete" asp-area="Management" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle-fill"></i></a>
				</td>
			</tr>
		}		
	</tbody>
</table>

